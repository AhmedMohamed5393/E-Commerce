<% include ../../../partials/header %>
<div class="container" style="margin-bottom: 5%;">
    <div class="d-block justify-content-center">
        <ul class="list-group">
          <% if(products && session.cart.totalquantity > 0){
            products.forEach((product) => { %>
          <li class="list-group-item m-2">
            <div class="row">
              <div class="d-flex justify-content-start col-lg-6">
                <img src="<%= product.item.img %>" class="img-fluid m-2" 
                 style="height: 120px;" alt="Responsive image">
                <article class="mt-5 col-lg-6">
                  <h4 class="text-center"><%= product.item.model %></h4>
                  <ul class="list-inline text-center mb-2"
                      style="font-size: 14px;">
                    <li class="list-inline-item text-secondary">
                      &euro; <%= product.item.price * (100 - product.item.discount) / 100 %>
                    </li>
                  </ul>
                </article>
              </div>
              <div class="d-flex justify-content-end flex-wrap align-content-center col-lg-6">
                <div class="input-group col-lg-6 p-1">
                  <div class="input-group-prepend">
                    <a class="btn btn-primary" type="button"
                       href="/addtocart/<%= product.item._id %>">Add</a>
                  </div>
                  <input type="number" class="form-control" value="<%= product.quantity %>"
                         aria-describedby="basic-addon1" disabled>
                </div>
                <div class="dropdown col-lg-6 p-1">
                  <button class="btn btn-danger dropdown-toggle" type="button" 
                          id="dropdownMenu3" data-toggle="dropdown" 
                          aria-haspopup="true" aria-expanded="false">
                    Remove
                  </button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenu3">
                    <a class="dropdown-item" href="/product/reduce/<%= product.item._id %>">
                      1 Item
                    </a>
                    <a class="dropdown-item" href="/product/remove/<%= product.item._id %>">
                      All
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </li>
          <% }); %>
        </ul>
        <div class="form-group d-flex justify-content-center mb-3">
          <input type="number" class="form-control" style="width: auto;"
                 value="<%= totalprice %>" disabled>
        </div>
        <div class="form-group d-flex justify-content-center">
          <a href="/product/cart/checkout" class="btn btn-outline-success">Check Out</a>
        </div>
      <% }else{ %>
          <div class="row d-flex justify-content-center" style="margin-top: 30%;">
            <a class="nav-link" href="/products/1">
              <i class="fa fa-shopping-cart text-primary" style="height: 75px; width: 85px;"></i>
              <i class="fa fa-plus text-warning" aria-hidden="true"
                 style="width: 40px; height: 40px;"></i>
            </a>
          </div>
          <div class="row d-flex justify-content-center m-2 margin-bottom: 5%;">
            <p class="text-center font-weight-bolder text-info"
               style="font-size: 24px;">
               No products added to the cart !
            </p>
          </div>
      <% } %>
    </div>
</div>
<% include ../../../partials/footer %>