<% include ../../../partials/header %>
<div class="container">
    <div class="row d-flex justify-content-center">
        <div id="charge-error" role="alert"
             class="alert alert-danger m-4 <% if(noError){ %>invisible<% } %>">
             <%= errMsg %>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="card col-lg-6 col-md-8 col-sm-10 col-xs-12" id='registerform'>
            <div class="card-body">
                <h4 class="card-title text-center">Payment</h4>
                <h5 class="card-title text-center mb-5">Total : &euro; <%= total %></h5>
                <form action='/product/cart/checkout' method='post' 
                      class='form-group' id="checkout-form">
                    <div class="form-group">
                        <input type="text" class="form-control" id="name"
                               name="name" placeholder="Name of customer" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="address"
                               id="address" placeholder="Home address" required>
                    </div>
                    <div class="form-group">
                        <input type="tel" class="form-control" name="phone"
                               id="phone" placeholder="Phone number" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="card-holder"
                               placeholder="Name of card holder" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" 
                               id="card-number" placeholder="Card number" required>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6 col-lg-6">
                            <input type="text" class="form-control" id="card-expiry-month"
                                   placeholder="Expiration Month" required>
                        </div>
                        <div class="form-group col-md-6 col-lg-6">
                            <input type="text" class="form-control" id="card-expiry-year"
                                   placeholder="Expiration Year" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" 
                               id="card-cvc" placeholder="Card CVC number" required>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="form-group">
                            <input type="submit" class="btn btn-outline-primary"
                                   value="Buy Now">
                        </div>
                        <div class="form-group ml-2">
                            <a href="javascript:history.back()" class="btn btn-outline-warning">
                                Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://js.stripe.com/v3/"></script>
<script src="../../../../js/stripe.js"></script>
<% include ../../../partials/footer %>