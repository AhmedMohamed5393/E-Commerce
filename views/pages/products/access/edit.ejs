<% include ../../../partials/header %>
<div class="row d-flex justify-content-center mt-5 mb-3">
    <% include ../../../partials/messages %>
</div>
<div class="d-flex justify-content-center p-1 mt-5 mb-5">
    <div class="card col-lg-6 col-md-8 col-sm-10 col-xs-12" id='registerform'>
        <div class="card-body">
            <h4 class="card-title text-center mt-4">
                Product is ready for editing
            </h4>
            <form action="/product/<%= product._id %>?_method=PUT"
                  method='post' class='form-group'>
                <div class="form-group">
                    <input type="text" class="form-control" 
                           name="author" value="<%= product.author %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" 
                           name="productType" value="<%= product.productType %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" 
                           name="brand" value="<%= product.brand %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control"
                           name="model" value="<%= product.model %>">
                </div>
                <div class="form-group">
                        <input type="text" class="form-control"
                               name="screensize" value="<%= product.screensize %>">
                </div>
                <div class="form-group">
                        <input type="text" class="form-control"
                               name="processor" value="<%= product.processor %>">
                </div>
                <div class="form-group">
                        <input type="number" class="form-control"
                               name="ram" value="<%= product.ram %>">
                </div>
                <div class="form-group">
                        <input type="number" class="form-control"
                               name="storage" value="<%= product.storage %>">
                </div>
                <div class="form-group">
                        <input type="number" class="form-control"
                               name="price" value="<%= product.price %>">
                </div>
                <div class="form-group">
                        <input type="number" class="form-control"
                               name="discount" value="<%= product.discount %>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control"
                           name="quantity" value="<%= product.quantity %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control"
                           name="img" value="<%= product.img %>">
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="form-group mr-2">
                        <input type="submit" class="btn btn-outline-primary" 
                               id='editproduct' value="Edit">
                    </div>
                    <div class="form-group ml-2">
                        <a href="javascript:history.back()" 
                           class="btn btn-outline-secondary" id='cancelediting'>
                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../../../partials/footer %>